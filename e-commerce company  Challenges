
/*Find all employees who work in IT and earn more than 50,000, sorted by salary (lowest first).*/
SELECT * FROM employees
WHERE department = 'IT' AND salary > 50000
order by salary asc;
/*Find all employees who work in IT and earn more than 50,000, sorted by salary (highest first).*/
SELECT * FROM employees
WHERE department = 'IT' AND salary > 50000
order by salary desc;

/*List all unique countries where customers are located (customer_id ,country).*/
SELECT MIN(customer_id) AS customer_id, country FROM Customers
GROUP BY country;

/* Find orders placed in 2023 only.*/
SELECT * FROM orders 
WHERE YEAR(order_date) = 2023;

/* Find orders placed in month 11 only.*/
SELECT * FROM orders 
WHERE month(order_date) = 11;  /* For monthname --- monthname()= month */

/* Find orders placed in day 20 only.*/
SELECT * FROM orders 
WHERE day(order_date) = 20;

/*Find the average salary per department, but show only departments with an average salary above 60,000.*/
SELECT department, AVG(salary) AS average_salary FROM Employees
GROUP BY department
HAVING AVG(salary) > 60000;

/*Find customers who never placed an order.*/
select Customers.customer_id, Customers.name, orders.order_id, orders.customer_id, orders.order_date from 
Customers LEFT join orders on Customers.customer_id=orders.customer_id
WHERE orders.order_id is NULL ;

/*Find top 3 customers based on total spending.*/
select orders.order_id ,Customers.customer_id,Customers.name ,orders.total_amount from Customers join orders
on Customers.customer_id = orders.customer_id
ORDER BY total_amount DESC
LIMIT 3;
